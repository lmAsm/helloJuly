page {
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  margin-top: 160rpx;
}
.userinfo {
  color: #666;
  margin-top: 160rpx;
  font-weight: bold;
}
.button-wrapper {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}
.button {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}